# pod
export GEM_HOME=$HOME/.gem
export PATH=$GEM_HOME/ruby/2.3.0/bin:$PATH

# brew install jenv
export JENV_ROOT=/usr/local/var/jenv
if which jenv > /dev/null; then eval "$(jenv init -)"; fi

export JAVA_HOME="/usr/local/var/jenv/versions/`jenv version-name`"
alias jenv_set_java_home='export JAVA_HOME="/usr/local/var/jenv/versions/`jenv version-name`"'

# adb
export PATH=$PATH:~/Library/Android/sdk/platform-tools

# brew sbin
export PATH=/usr/local/sbin:$PATH
export PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"

# iterm2
test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

# perl
PATH="/Users/yiwang/perl5/bin${PATH:+:${PATH}}"; export PATH;
PERL5LIB="/Users/yiwang/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}"; export PERL5LIB;
PERL_LOCAL_LIB_ROOT="/Users/yiwang/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"; export PERL_LOCAL_LIB_ROOT;
PERL_MB_OPT="--install_base \"/Users/yiwang/perl5\""; export PERL_MB_OPT;
PERL_MM_OPT="INSTALL_BASE=/Users/yiwang/perl5"; export PERL_MM_OPT;
